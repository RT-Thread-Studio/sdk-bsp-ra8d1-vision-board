from building import *
import rtconfig

cwd     = GetCurrentDir()
src     = Glob('*.c')
path    = [cwd]

# AC5 use option '--c99'
LOCAL_CCFLAGS = ''

if rtconfig.CROSS_TOOL == 'gcc':
    LOCAL_CCFLAGS += ' -std=c99'
elif rtconfig.CROSS_TOOL == 'keil':
    # Using ARM Compiler Version 5
    # LOCAL_CCFLAGS += ' --c99'
    # LOCAL_CCFLAGS += ' --no-multibyte-chars'
    # Using ARM Compiler Version 6
    LOCAL_CCFLAGS += ' -std=gnu99'
    # pass

group = DefineGroup('cm_backtrace', src, depend = ['PKG_USING_CMBACKTRACE'], CPPPATH = path, LOCAL_CCFLAGS = LOCAL_CCFLAGS)

'''
#
# armclang complier not support option '--c99'
#
group = DefineGroup('cm_backtrace', src, depend = ['PKG_USING_CMBACKTRACE'], CPPPATH = path)
'''
Return('group')
